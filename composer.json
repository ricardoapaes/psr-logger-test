{
    "name": "ricardoapaes/psr-logger-test",
    "type": "library",
    "description": "A PSR-3 logger test implementation.",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^9.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Psr\\Log\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Psr\\Log\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Like Sistemas",
            "email": "dev@likesistemas.com.br",
            "homepage": "https://www.likesistemas.com.br/"
        }
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "fix:ci": "php-cs-fixer fix --dry-run --stop-on-violation",
        "test": "phpunit",
        "analyse": "phpstan analyse"
    }
}
